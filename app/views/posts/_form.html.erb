<div class = "formPart">
    <%= simple_form_for @post, url: posts_new_path  do |f| %>
        <%= f.input :title, label: '제목', wrapper_html: {class: 'firstInput'} %>
        <%= f.input :content, label: '내용', wrapper_html: {class: 'secondInput'}%>
        <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>
        <%= f.input :type, :as => :hidden, :input_html => { :value => params[:type] }  %>
        <%= f.button :submit, "제출" %>
    <% end %>
</div>