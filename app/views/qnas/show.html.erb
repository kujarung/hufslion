<div class="container">
    <h1>제목: <%= @qna.title %></h1>
    <hr />
    
    <h3><%#= icon 'time' %><%#= local_time(@notice.created_at) %>
        내용:  <%= @qna.content.html_safe %>
    </h3>
    
    <a href = '/qnas/<%=@qna.id%>/qnareplies/new'>답글 작성</a>
    <br>
    <% @qna.qnareplies.each do |x|%>
    <div class="well">
      답글: <strong><%= x.title %></strong> / 작성자 : <%=x.user_email%><br>
      <%= simple_format(x.content) %>
        <%if user_signed_in? && x.user_email == current_user.email%>
          <%=link_to '답글삭제', qna_qnareply_path(:id => "#{x.id}", :qna_id=> "#{@qna.id}"), method: :delete %>
        <%else%>
        <%end%>
      </div>
      <%end%>
      <br>
    
    
    <% if current_user == @qna.user %>
      <%#= icon 'pencil' %><%= link_to '수정하기', edit_qna_path(@qna) %> | 
      <%#= icon 'trash' %><%= link_to '삭제하기', qna_path, method: :delete %> |
    <% end %>
    <%= link_to '목록으로', :back %>
</div>