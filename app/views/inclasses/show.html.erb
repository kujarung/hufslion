<div class="container">
    <h1>제목: <%= @inclass.title %></h1>
    <hr />
    
    <h3><%#= icon 'time' %><%#= local_time(@notice.created_at) %>
        내용:  <%= @inclass.content.html_safe %>
    </h3>
    <% if current_user == @inclass.user %>
      <%#= icon 'pencil' %><%= link_to '수정하기', edit_inclass_path(@inclass) %> | 
      <%#= icon 'trash' %><%= link_to '삭제하기', inclass_path, method: :delete %> |
    <% end %>
    <%= link_to '목록으로', :back %>
</div>