<div class="container">
    <h1>제목: <%= @notice.title %></h1>
    <hr />
    
    <h3><%#= icon 'time' %><%#= local_time(@notice.created_at) %>
        내용:  <%= @notice.content.html_safe %>
    </h3>
    <% if current_user == @notice.user %>
      <%#= icon 'pencil' %><%= link_to '수정하기', edit_notice_path(@notice) %> | 
      <%#= icon 'trash' %><%= link_to '삭제하기', notice_path, method: :delete %> |
    <% end %>
    <%= link_to '목록으로', :back %>
</div>