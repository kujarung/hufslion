<div class="container-fluid showWrapper">
  <div class = "showH1"><h1><%= @notice.title %></h1> <%= link_to '목록으로', :back %> </div>
  <h1 class = "headContent">공지사항</h1>
  <div class = "showContent">
    <h3><%#= icon 'time' %><%#= local_time(@notice.created_at) %>
      <%= @notice.content.html_safe %>
    </h3>
  </div>
  <div class = "showFoot">
    <% if current_user == @notice.user %>
      <%#= icon 'pencil' %><%= link_to '수정하기', edit_notice_path(@notice) %>
      <%#= icon 'trash' %><%= link_to '삭제하기', notice_path, method: :delete %>
    <% end %>
    <%= link_to '목록으로', :back %>
  </div>
</div>